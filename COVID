covid = read.csv("covid_project_data.csv")

### 1. INTRODUCTION
nrow(covid)
ncol(covid)

x_var = covid$Population
y_var = covid$Cases...last.7.days

### 2. DATA DESCRIPTION
mean(covid$Population)
sd(covid$Population)
hist(covid$Population, breaks = 50)

mean(covid$Cases...last.7.days)
sd(covid$Cases...last.7.days)
hist(covid$Cases...last.7.days, breaks = 50)

model = lm(covid$Cases...last.7.days~covid$Population)

plot(x = covid$Population, y = covid$Cases...last.7.days,
     main = "Population vs. Cases in the last 7 days",
     xlab = "Population", ylab = "Cases in the last 7 days")

abline(model, col = "red", lwd = 2)

cor(x = covid$Population, y = covid$Cases...last.7.days)

### 3. RESULTS AND INTERPRETATION
summary(model)

plot(x = covid$Population, y = model$residuals,
     main = "Population vs. Residuals",
     xlab = "Population", ylab = "Residuals")
abline(a = 0, b = 0, col = "red", lwd = 2)












